<div class="min-h-screen bg-slate-50 flex items-center justify-center px-4">
  <div class="w-full max-w-md">
    <!-- ロゴ / 見出し -->
    <div class="text-center mb-6">
      <h1 class="text-2xl font-semibold tracking-tight text-slate-900">まいにち園だより</h1>
      <p class="text-slate-500 text-sm mt-1">アカウントにログイン</p>
    </div>

    <!-- カード -->
    <div class="bg-white rounded-2xl shadow-sm border border-slate-200 p-6">
      <%= form_with scope: :user, url: session_path(:user), class: "space-y-4", data: { turbo: false } do |f| %>
        <div>
          <%= f.label :email, "メールアドレス", class: "block text-sm font-medium text-slate-700" %>
          <%= f.email_field :email, autofocus: true,
                class: "mt-1 block w-full rounded-lg border-slate-300 shadow-sm focus:border-sky-500 focus:ring-sky-500",
                autocomplete: "email" %>
        </div>

        <div>
          <%= f.label :password, "パスワード", class: "block text-sm font-medium text-slate-700" %>
          <%= f.password_field :password,
                class: "mt-1 block w-full rounded-lg border-slate-300 shadow-sm focus:border-sky-500 focus:ring-sky-500",
                autocomplete: "current-password" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="flex items-center justify-between">
            <label class="inline-flex items-center gap-2 text-sm text-slate-600">
              <%= f.check_box :remember_me, class: "rounded border-slate-300 text-sky-600 focus:ring-sky-500" %>
              ログイン状態を保持
            </label>
            <%= link_to "パスワードをお忘れですか？", new_password_path(resource_name),
                  class: "text-sm text-sky-700 hover:text-sky-900" %>
          </div>
        <% end %>

        <%= f.submit "ログイン",
              class: "w-full inline-flex justify-center items-center rounded-lg bg-sky-600 px-4 py-2.5 text-white font-semibold hover:bg-sky-700 transition" %>
      <% end %>
    </div>

    <!-- 補助リンク（自己登録は停止なので招待コードへ） -->
    <div class="text-center mt-4 text-sm">
      <%= link_to "招待コードでアカウント作成", invite_path, class: "text-slate-600 hover:text-slate-900 underline" %>
    </div>
  </div>
</div>