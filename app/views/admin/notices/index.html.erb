<h1>お知らせ管理</h1>

<p><%= link_to "新規作成", new_admin_notice_path %></p>

<table border="1" cellpadding="6">
  <tr>
    <th>タイトル</th>
    <th>締切</th>
    <th>公開状態</th>
    <th></th>
  </tr>

  <% @notices.each do |notice| %>
    <tr>
      <td><%= link_to notice.title, admin_notice_path(notice) %></td>
      <td><%= notice.due_on || "-" %></td>
      <td><%= notice.status %></td>
      <td>
        <%= link_to "編集", edit_admin_notice_path(notice) %> |
        <%= link_to "削除", admin_notice_path(notice), data: { turbo_method: :delete, confirm: "削除しますか？" } %>
      </td>
    </tr>
  <% end %>
</table>
