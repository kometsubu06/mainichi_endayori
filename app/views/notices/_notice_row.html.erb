<article class="bg-white border rounded-lg px-4 py-3 flex items-center justify-between hover:bg-slate-50 transition">
  <h3 class="font-medium text-slate-900 truncate">
    <%= link_to notice.title, notice_path(notice), class: "hover:underline" %>
  </h3>
  <span class="text-sm text-slate-500">
    <%= (notice.published_at || notice.created_at).strftime("%-m月%-d日 %H:%M") %>
  </span>
</article>